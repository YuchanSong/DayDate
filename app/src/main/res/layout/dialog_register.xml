<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/textviewLogo"
        android:layout_width="221dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Day Date"
        android:layout_marginBottom="10dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textviewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewLogo"
        android:text="아이디"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/RidText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:layout_below="@+id/textviewId">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/RtextviewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/RidText" />

    <EditText
        android:id="@+id/RpasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:layout_below="@+id/RtextviewPassword" />

    <TextView
        android:id="@+id/RtextviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/RpasswordText" />

    <EditText
        android:id="@+id/RnameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:layout_below="@+id/RtextviewName" />

    <TextView
        android:id="@+id/RtextviewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/RnameText" />

    <EditText
        android:id="@+id/RageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:layout_below="@+id/RtextviewAge" />

    <Button
        android:id="@+id/buttonDoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RageText"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="회원가입"/>

</RelativeLayout>
